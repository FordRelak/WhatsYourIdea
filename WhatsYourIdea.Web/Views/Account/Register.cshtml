@model RegisterViewModel
@{
}

<section class="container mt-3">
    <form asp-controller=Account asp-action=Register asp-antiforgery=true>
        <div asp-validation-summary=ModelOnly class="error"></div>
        <div class="mb-3">
            <label class="form-label ex-label" asp-for=Login></label>
            <input class="form-control ex-input" asp-for=Login>
            <span class="error" asp-validation-for=Login></span>
        </div>
        <div class="mb-3">
            <label class="form-label ex-label" asp-for=Email></label>
            <input class="form-control ex-input" asp-for=Email>
            <span class="error" asp-validation-for=Email></span>
        </div>
        <div class="mb-3">
            <label class="form-label ex-label" asp-for=Password></label>
            <input class="form-control ex-input" asp-for=Password>
            <span class="error" asp-validation-for=Password></span>
        </div>
        <div class="mb-3">
            <label class="form-label ex-label" asp-for=PasswordConfirm></label>
            <input class="form-control ex-input" asp-for=PasswordConfirm>
            <span class="error" asp-validation-for=PasswordConfirm></span>
        </div>
        <button type="submit" class="btn btn-outline-light w-100">Submit</button>
    </form>
</section>