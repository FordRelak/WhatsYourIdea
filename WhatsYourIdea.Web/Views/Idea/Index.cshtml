@model IdeaDetailedDto
@section head{
<script src="~/bundles/idea.bundle.js"></script>
}

<section class="container">
    <article class="card detail-card mt-3">
        <div class="py-4 px-3">
            <div class="row gx-3">
                @foreach(var tag in Model.Tags)
                {
                    <div class="col-auto">
                        <div class="tag">
                            #@tag.Name
                        </div>
                    </div>
                }
            </div>
            <hr />
            <div class="row mt-3 gx-3">
                <div class="col-12">
                    <h5 class="text-center">@Model.Title</h5>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <div class="main-img" style="background-image: url('@Model.MainImagePath')">
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <div class="main-text">
                        @Model.SubTitle
                    </div>
                </div>
            </div>

            <div class="row mt-3 justify-content-between">
                <div class="col-6 title">
                    <p class="fs-7">
                        <i>by <b>@Model.Author.UserName</b>, @Model.CreateDate.ToShortDateString()</i>
                    </p>
                </div>
                <div class="col-6 row icons justify-content-end">
                    <div class="col-auto">
                        @if(Model.IsTracked)
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        else
                        {
                            <i class="bi bi-star"></i>
                        }
                        <span>@Model.TrackedNumber</span>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-chat-left"></i>
                        <span>@Model.CommentNumber</span>
                    </div>
                </div>
            </div>

            <hr />

            <div class="row mt-3">
                <div class="col-12">
                    <div class="comment__add">
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 75px"></textarea>
                            <label for="floatingTextarea2">Comments</label>
                        </div>
                        <div class="d-grid gap-2 mt-1">
                            <button class="btn btn-light" type="button">Send</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                @foreach(var comment in Model.Comments)
                {
                    @await Html.PartialAsync("_Comment", comment)
                }
            </div>
        </div>
    </article>
</section>