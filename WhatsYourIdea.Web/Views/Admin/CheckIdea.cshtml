@model IdeaDetailedDto
@section head{
<script src="~/bundles/idea.bundle.js"></script>
}

<section class="container">
    <article class="card detail-card mt-3">
        <div class="py-4 px-3">
            <div class="row gx-3">
                @foreach(var tag in Model.Tags)
                {
                    <div class="col-auto">
                        <div class="tag">
                            #@tag.Name
                        </div>
                    </div>
                }
            </div>
            <hr />
            <div class="row mt-3 gx-3">
                <div class="col-12">
                    <h5 class="text-center">@Model.Title</h5>
                </div>
            </div>

            @if(@Model.MainImagePath is not null)
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="main-img" style="background-image: url('/@Model.MainImagePath.Replace('\\','/').Trim('/')')">
                        </div>
                    </div>
                </div>
            }
            
            <div class="row mt-3">
                <div class="col-12">
                    <div class="main-text">
                        @Model.SubTitle
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <div class="main-text">
                        @Html.Raw(Model.Text) 
                    </div>
                </div>
            </div>

            <div class="row mt-3 justify-content-between">
                <div class="col-6 title">
                    <p class="fs-7">
                        <i>by <b>@Model.Author.UserName</b>, @Model.CreateDate.ToShortDateString()</i>
                    </p>
                </div>
            </div>
        </div>
    </article>
</section>